<div class="container">
  <div class="row search-box">
    <div class="col-md-4 col-md-offset-4 col-sm-10 col-sm-offset-1">
      <%= form_tag(search_weather_path, method: :post) do %>
          <div class="form-group form-group-lg">
            <div class="input-group">
              <select class="form-control" name="place_id" id="city_name"></select>
          <span class="input-group-btn">
            <button class="btn btn-default btn-lg" type="button" id="search_button">
              <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            </button>
          </span>
            </div>
          </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="panel panel-weather col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-12">
            <h1 class="location"><%= location_name(@location) %></h1>
          <span class="current_time">
            <%= current_time(@location) %>
          </span>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-8 current-temp">
            <%= current_temperature(@weather, @location) %>
          </div>
          <div class="col-sm-4">
            <div class="row">
              <div class="col-sm-12 text-left">
                <h3>
                  <%= temperature(:max, @weather.temp_max) %>
                </h3>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12 text-left">
                <h3>
                  <%= temperature(:min, @weather.temp_min) %>
                </h3>
              </div>
            </div>
          </div>
        </div>
        <span class="weather_description"><%= weather_description(@weather) %></span>
        <div class="row">
          <div class="col-sm-3">
            <h3><%= weather_condition(@weather, :humidity) %></h3>
          </div>
          <div class="col-sm-3">
            <h3><%= weather_condition(@weather, :pressure) %></h3>
          </div>
          <div class="col-sm-3">
            <h3><%= weather_condition(@weather, :wind_speed) %></h3>
          </div>
          <div class="col-sm-3">
            <h3><%= wind_direction(@weather) %></h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
